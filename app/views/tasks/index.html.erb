<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed ? '[X]' : '[ ]' %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete task",
            task_path(task),
            method: :delete,
            data: {confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a new task", new_path %>
